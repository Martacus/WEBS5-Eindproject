<!DOCTYPE html>
<html>
  <head>
    <% include ../partial/header %>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <% for (var i = 0; i < posts.length; i++) { %>
          <div class="col-md-6">
            <div class="card post-card">
              <div class="card-header">
                <%= posts[i].title %> <a class="fa fa-link" href="<%= posts[i].url %>"></a>
              </div>
              <div class="card-body">
                <form action="/post/<%= posts[i].name %>" method="get">
                  <button type="submit" class="btn btn-success">Polls</button>
                </form>
              </div>
            </div>
          </div>
        <% } %>
      </div>
    </div>
  </body>
</html> 