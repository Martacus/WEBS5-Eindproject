<!DOCTYPE html>
<html>

<head>
  <% include partial/header %>
</head>

<body>
  <% include partial/navbar %>

  <div class="container">
    <div class="row">
      <div class="md-col-12">
          <input type="number" class="counter" value="0" disabled></input>
          
      </div>
    </div>
    <div class="row" style="margin-top: 20px;">
      <button onclick="plus()" class="btn btn-success">+1</button> 
      <button onclick="minus()" class="btn btn-success" style="margin-left: 20px;">-1</button>
    </div>
  </div>
 
  
  <script src="/socket.io/socket.io.js"></script>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
  <script>
    $(document).ready(function () {
      socket.on('counterupdate', function (msg) {
        $('.counter').val(msg.counter);
      });
    });

    var socket = io();

    function plus() {
      socket.emit('counter', parseInt($('.counter').val()) + 1);
    }

    function minus(){
      socket.emit('counter', parseInt($('.counter').val()) - 1);
    }

    
  </script>
</body>


</html>